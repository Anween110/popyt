{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2016",
    "lib": [ "es2016" ],
    "outDir": "out",
    "declaration": true,
    "removeComments": false,
    "sourceMap": true,
    "rootDir": "src",
    "strict": false,
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules",
    "out",
    "test",
    "gulpfile.ts",
    "typings"
  ]
}
